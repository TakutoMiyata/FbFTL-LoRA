{
  "experiment_name": "FedSA-FTL_CIFAR100_ViT",
  "random_seed": 42,
  "device": "cuda",
  
  "dataset": {
    "name": "cifar100",
    "data_dir": "./data",
    "alpha": 0.1,
    "comment": "CIFAR-100 with severe non-IID distribution"
  },
  
  "model": {
    "type": "vit_base",
    "lora_rank": 16,
    "lora_alpha": 16.0,
    "lora_dropout": 0.05,
    "head_hidden_dims": [512, 256],
    "comment": "Higher rank for more complex CIFAR-100 task"
  },
  
  "federated": {
    "num_clients": 50,
    "num_rounds": 200,
    "client_sampling_ratio": 0.3,
    "aggregation_method": "fedavg",
    "comment": "More clients and rounds for challenging CIFAR-100"
  },
  
  "training": {
    "local_epochs": 1,
    "batch_size": 32,
    "eval_frequency": 20,
    "optimizer": {
      "lr": 0.003,
      "weight_decay": 1e-4
    },
    "comment": "Lower learning rate for stability"
  },
  
  "logging": {
    "log_level": "INFO",
    "save_checkpoints": true,
    "checkpoint_frequency": 50,
    "results_dir": "./results"
  }
}
