{
  "experiment_name": "FedSA-FTL_CIFAR10_ViT",
  "random_seed": 42,
  "device": "cuda",
  
  "dataset": {
    "name": "cifar10",
    "data_dir": "./data",
    "alpha": 0.5,
    "comment": "alpha controls non-IID level: inf=IID, 0.5=moderate non-IID, 0.1=severe non-IID"
  },
  
  "model": {
    "type": "vit_base",
    "lora_rank": 8,
    "lora_alpha": 16.0,
    "lora_dropout": 0.05,
    "head_hidden_dims": [512, 256],
    "comment": "ViT-Base backbone with LoRA-adapted head"
  },
  
  "federated": {
    "num_clients": 10,
    "num_rounds": 100,
    "client_sampling_ratio": 1.0,
    "aggregation_method": "fedavg",
    "comment": "Basic federated learning setup"
  },
  
  "training": {
    "local_epochs": 1,
    "batch_size": 32,
    "eval_frequency": 10,
    "optimizer": {
      "lr": 0.005,
      "weight_decay": 1e-4
    },
    "comment": "Local training configuration"
  },
  
  "logging": {
    "log_level": "INFO",
    "save_checkpoints": true,
    "checkpoint_frequency": 50,
    "results_dir": "./results"
  }
}
